{
  "name": "typed-struct",
  "version": "1.0.8",
  "description": "A TypeScript utility library for creating objects that store their properties in a buffer for serialization/deserialization similar to structures in C",
  "main": "build/main/struct.js",
  "typings": "build/main/struct.d.ts",
  "module": "build/module/struct.js",
  "repository": "https://github.com/sarakusha/typed-struct",
  "homepage": "https://sarakusha.github.io/typed-struct/",
  "author": {
    "email": "sarakusha@gmail.com",
    "name": "Andrei Sarakeev"
  },
  "license": "MIT",
  "keywords": [
    "struct",
    "typescript",
    "serialize",
    "deserialize",
    "buffer"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix -c .eslintrc-prod.js",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts -c .eslintrc-prod.js",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "test:unit": "jest src",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest src --watch",
    "cov": "run-s build cov:html && open-cli coverage/index.html",
    "cov:html": "jest src --coverage --coverageReporters=html",
    "cov:lcov": "jest src --coverage --coverageReporters=lcov",
    "cov:send": "run-s cov:lcov && curl -s https://codecov.io/bash | bash",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "release:version": "standard-version",
    "release:publish": "git push --follow-tags origin main && yarn publish"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-plugin-rewire-ts": "^1.4.0",
    "codecov": "^3.5.0",
    "cspell": "^5.3.12",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "prettier-airbnb-config": "^1.0.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.0.0",
    "typedoc": "^0.20.35",
    "typescript": "^4.0.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "html"
    ]
  }
}
